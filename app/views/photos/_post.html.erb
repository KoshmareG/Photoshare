<div class="box padding-none">
  <%= render "header", photo: post %>
  <div class="column is-12-desktop is-12-tablet is-12-mobile show-box padding-none">
    <%= image_tag(post.images.first) %>
  </div>
  <turbo-frame id="likes_<%= post.id %>">
    <%= render "likes", photo: post %>
  </turbo-frame>
  <%= render "text", photo: post %>
  <%= render partial: "comments/post_comment", collection: post.last_comments %>
</div>