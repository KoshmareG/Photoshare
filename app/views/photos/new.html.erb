<div class="columns is-mobile is-centered top-margin-5">
  <div class="column is-10-desktop is-12-mobile">
    <div class="box padding-none">
      <%= form_for :photo, url: photos_path do |f| %>
        <div class="custom-header">
          <div class="columns is-mobile">
            <div class="column is-6">
              <%= f.label :images, t("new_photo_page.add_images"), class: "button is-small is-info" %>
              <%= f.file_field :images, multiple: true, style: "display: none" %>
            </div>
            <div class="column is-6">
              <%= f.button t("new_photo_page.submit"), type: "submit", class: "button is-small is-info", style: "float:right" %>
            </div>
          </div>
        </div>
        <div class="columns is-gapless">
          <div class="column is-6-desktop is-12-mibile pb-0">
            <div class="image-preview" style="position: relative;">
              <%= image_tag("icons/image-fill.svg", size: "50", class: "new-photo-icon") %>
              <p class="new-photo-icon mt-5"><%= t("new_photo_page.add_photo") %></p>
            </div>
          </div>
          <div class="column is-6-desktop is-12-mibile">
            <%= f.text_area :text, rows: "1", autocomplite: :off, placeholder: t("new_photo_page.placeholder"), id: "resize-textarea", class: "text-area-photo" %>
            <p class="has-text-weight-semibold mb-3" style="text-align: center; color: rgb(130,130,130)"><%= flash[:alert] %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>