<div class="columns is-mobile is-centered mt-3">
  <div class="column is-6-desktop is-12-tablet is-12-mobile">
    <div class="box">
      <div class="tabs is-centered">
        <ul>
          <li><%= link_to t("edit_profile.main_info"), edit_user_path(current_user.id) %></li>
          <li class="is-active"><a><%= t("edit_profile.password") %></a></li>
        </ul>
      </div>
      <p class="has-text-weight-semibold mb-3" style="text-align: center; color: rgb(130,130,130)"><%= devise_error_messages %></p>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.label :password, t("edit_profile.password_page.new_password"), class: "is-size-6" %>
        <%= f.password_field :password, class: "input is-small mb-3" %>
        <%= f.label :password_confirmation, t("edit_profile.password_page.password_confirmation"), class: "is-size-6" %>
        <%= f.password_field :password_confirmation, class: "input is-small mb-3" %>
        <%= f.label :current_password, t("edit_profile.password_page.current_password"), class: "is-size-6" %>
        <%= f.password_field :current_password, class: "input is-small mb-3" %>
        <%= f.submit t("edit_profile.password_page.update"), class: "button is-info is-small is-fullwidth" %>
      <% end %>
    </div>
  </div>
</div>
