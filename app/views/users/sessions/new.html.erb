<div class="columns is-mobile is-centered top-margin-20">
  <div class="column is-3-desktop is-12-mobile">
    <div class="box">
      <div class="columns is-mobile is-centered mb-1">
        <div class="column is-8">
          <%= image_tag("Photoshare_mini.png", class: "image") %>
        </div>
      </div>
      <p class="has-text-weight-semibold mb-3" style="text-align: center; color: rgb(130,130,130)"><%= flash[:alert] %></p>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input mb-3" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: t("password"), class: "input mb-5" %>
        <%= f.submit t("log_in"), class: "button is-info is-fullwidth mb-3" %>
      <% end %>
      <p style="text-align: center"><%= link_to t("sign_in_page.forgot_password"), new_user_password_url, class: "is-size-6", style: "text-decoration: none; text-align: center" %></p>
    </div>
    <div class="box">
      <p style="text-align: center"><%= t("sign_in_page.dont_have_account") %><%= link_to t("sign_in_page.sign_up"), new_user_registration_url, data: {turbo: false}, class: "is-size-6", style: "text-decoration: none; text-align: center" %></p>
    </div>
  </div>
  <div class="column is-3-desktop is-hidden-mobile">
    <p>To do</p>
  </div>
</div>
